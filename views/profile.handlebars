<section class="user-posts">
	<h2>Your {{{postNeoType}}}s</h2>
	<!-- Conditionally show all of the user's posts -->
	{{#if user.posts}}
		<ul>
			{{#each user.posts}}
				{{> post this user=../user}}
			{{/each}}
		</ul>
	{{else}}
		<p>You have not posted yet, {{user.username}}.</p>
	{{/if}}
</section>